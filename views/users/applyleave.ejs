<!DOCTYPE html>
<html>
<head>
      <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css"
    />
    <title>Employee Leave Form</title>
    
    <style>
        body {
          font-family: Arial, sans-serif;
          background-color: #f4f4f4;
          margin: 0;
          padding: 0;
          display: flex;
          justify-content: center;
          align-items: center;
          height: 100vh;
        }
    
        form {
          display: grid;
          grid-template-columns: repeat(2, 1fr);
          gap: 15px;
          background-color: white;
          padding: 20px;
          border-radius: 8px;
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    
        h1 {
          grid-column: span 2;
          text-align: center;
        }
    
        label {
          font-weight: bold;
        }
    
        input {
          width: 100%;
          padding: 10px;
          margin: 5px 0;
          box-sizing: border-box;
        }
        select{
          width: 100%;
          padding: 10px;
          margin: 5px 0;
          box-sizing: border-box;
        }
    
        input[type="submit"] {
          grid-column: span 2;
          background-color: #4caf50;
          color: white;
          cursor: pointer;
        }
        input[type="submit"]:hover {
          background-color: #45a049;
        }
    </style>
</head>
<body>

    <div class="leave-form">
        <h2>Employee Leave Form</h2>
        <% 
        if(typeof message !== 'undefined'){
            %>
            <p style="color: forestgreen;"> <%= message %></p>
            <%
        }
        %>
        
      
        <form action="" method="post">
            <div class="form-group">
              <label for="leave-type">Employee Name:</label>
              <select id="employee-name" name="name">
                  <option value="<%= user.name %>"><%= user.name %></option>
              </select>
          </div>
            <div class="form-group">
              <label for="leave-type">Department:</label>
              <select id="employee-name" name="d_name">
                  <option value="<%= user.department %>"><%= user.department %> </option>
              </select>
          </div>

            <div class="form-group">
                <label for="leave-type">Your EID:</label>
                <input type="text" name="eid">
            </div>
            <div class="form-group">
                <label for="leave-type">Leave Type:</label>
                <select id="leave-type" name="leave_type">
                    <option value="vacation">Vacation</option>
                    <option value="sick-leave">Sick Leave</option>
                    <option value="medical">Medical</option>
                    <option value="personal">Personal</option>
                </select>
            </div>
            <div class="form-group">
                <label for="start-date">Start Date:</label><span style="color: red;">*</span>
                <input type="date"  id="start_date" name="start_date" required>
            </div>
            <div class="form-group">
                <label for="end-date">End Date: </label> <span style="color: red;">*</span>
                <input type="date" id="end_date" name="end_date" oninput="calculateDateDifference()"  required>
            </div>
            <div class="form-group">
              <!-- <button class="btn bg-primary" onclick="return calculateDateDifference()"> Check days  </button> -->
                <input type="text" id="result" name="days" readonly>
            </div>
              <!-- hidden data id -->
                <input  type="hidden"  name="user_id" value="<%= user._id %>"  />
            <!-- <div class="form-group">
                <label for="reason">Reason:</label>
                <textarea id="reason" name="reason" rows="4" ></textarea>
            </div> -->
            <div class="form-group">
                <input type="submit" value="Submit Leave Request">
            </div>
        </form>

     
 
 <script>
  function calculateDateDifference() {
    var start = document.getElementById("start_date").value;
    var end = document.getElementById("end_date").value;

    // Check if either start or end date is empty
    if (!start || !end) {
        alert("Please enter both start and end dates.");
        return false; // Prevent the form from submitting
    }

    const dateOne = new Date(start);
    dateOne.setHours(0, 0, 0, 0); // Set time to midnight

    const dateTwo = new Date(end);
    dateTwo.setHours(23, 59, 59, 999); // Set time to the end of the day

    // Check if the dates are valid
    if (isNaN(dateOne) || isNaN(dateTwo)) {
        alert("Invalid date format. Please enter valid dates.");
        return false; // Prevent the form from submitting
    }

    // Calculate the difference in days, ensuring at least 1 day for the same day
    const diff = dateTwo - dateOne;
    const diffInDays = Math.ceil(diff / (1000 * 60 * 60 * 24));

    document.getElementById("result").value = diffInDays;

    // Prevent the form from submitting
    return false;
}

 </script>
</body>
</html>
