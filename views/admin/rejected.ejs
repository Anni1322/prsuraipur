<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container">
<div class="row my-4">
<div class="col-lg-12">
    <% 
    if(typeof message !== 'undefined'){
        %>
        <h4><%= message %></h4>
        <%
    }
    %>

<div class="table-responsive">
    <a href="/admin/home">Home</a>
<!-- for each ejs -->
<% if (RejectedCount != ''){%>
<table class="table table-striped text-center my-3">
<thead class="table-dark">
<tr>
    <th>Id</th>
    <th>Name</th>
    <th>Eid</th>
    <th>Leave Type</th>
    <th>From</th>
    <th>To</th>
    <th>Status</th>
    <th>Action</th>
</tr>
</thead>  
<tbody>
<!-- for each ejs -->
<% RejectedCount.forEach((row, index) =>{ %>
    <tr class="align-middle">      
        <td><%= index %> </td>
        <!-- <td><img src="userimages/<%= row.image %>" width="50" class="img-thambnail"></td> -->
    
        <td><%= row.name %> </td>
        <td><%= row.eid %> </td>
        <td><%= row.leave_type %> </td>
        <td><%= row.start_date %> </td>     
        <td><%= row.end_date %></td>             
        <td><%= row.status %></td>             
        <td>
            <a href="/admin/action?id=<%= row._id %>"> <i class="text-success fas fa-edit fa-lg mx-3 "></i></a>
            <i class="text-danger fas fa-trash fa-lg mx-3" onclick="confirmDelete('<%= row._id %>')" ></i>
        </td>
    </tr>                            
<% }) %>               
</tbody>
</table>
<% } else { %>
<h1 class="text-center text-secondary mt-5">No Users Found in the Database !</h1>
<% } %>
</div>
</div>
</div>
</div>
 
