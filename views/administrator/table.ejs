<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container">
<div class="row my-4">
<div class="col-lg-12">
    <% 
    if(typeof message !== 'undefined'){
        %>
        <h4><%= message %></h4>
        <%
    }
    %>

<div class="table-responsive">
    <a href="/admin/home"><i class="text-success fas fa-home fa-lg mx-3 mt-2"></i></a>
    <a href="/admin/userexport"><i class="text-success fas fa-print fa-lg mx-3 mt-2"></i>Export Excel</a>
    <a href="/admin/userexportPdf"><i class="text-success fas fa-print fa-lg mx-3 mt-2"></i>Export Pdf</a>
    
<!-- for each ejs -->
<% if (users != ''){%>
<table class="table table-striped text-center my-3">
<thead class="table-dark">
<tr>
    <th>Id</th>
    <th>Image</th>
    <th>Name</th>
    <th>E-Mail</th>
    <th>Department</th>
    <th>Admin-1</th>
    <th>Phone</th>
    <th>Action</th>
</tr>
</thead>  
<tbody>
<!-- for each ejs -->
<% users.forEach((row, index) =>{ %>
    <tr class="align-middle">      
        <td><%= index %> </td>
        <td><img src="userimages/<%= row.image %>" width="50%" class="img-thambnail"></td>
        <td><%= row.name %> </td>
        <td><%= row.email %> </td>
        <td><%= row.department %> </td>
        <td><%= row.is_admin %> </td>
        <td><%= row.mobile %> </td>                  
        <td>
            <a href="/admin/edit?id=<%= row._id %>"> <i class="text-success fas fa-edit fa-lg mx-3 mt-2"></i></a>
            <i class="text-danger fas fa-trash fa-lg mx-1 mt-5" onclick="confirmDelete('<%= row._id %>')" ></i>
        </td>
    </tr>                            
<% }) %>               
</tbody>
</table>
<% } else { %>
<h1 class="text-center text-secondary mt-5">No Users Found in the Database !</h1>
<% } %>
</div>
</div>
</div>
</div>
 
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $("table").DataTable({
            order:[0, 'desc']
        });
    });
</script>
<script>
  function confirmDelete(id) {
     
    // You can customize the alert message and behavior here
    if (confirm("Are you sure you want to delete this item?")) {
      // If the user clicks "OK", navigate to the delete URL
      window.location.href = "/admin/delete/" + id;
    } else {
      // If the user clicks "Cancel" or closes the alert, do nothing
       
    }
  }
</script>