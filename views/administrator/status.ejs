<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container">
<div class="row my-4">
<div class="col-lg-12">
    <% 
    if(typeof message !== 'undefined'){
        %>
        <h4><%= message %></h4>
        <%
    }
    %>

<div class="table-responsive">
    <a href="/home">Home</a>
<!-- for each ejs -->
<% if (leaves != ''){%>
<table class="table table-striped text-center my-3">
<thead class="table-dark">
<tr>
    <th>Applied Date</th>
    <th>From Date</th>
    <th>To Date</th>
    <th>Leave type</th>
    <th>Status</th>
    <th>Action</th>
</tr>
</thead>  
<tbody>
<!-- for each ejs -->
<% leaves.forEach((row, index) =>{ %>
    <tr class="align-middle">      
        <td><%= row.date %> </td>
        <td><%= row.start_date %> </td>
        <td><%= row.end_date %> </td>
        <td><%= row.leave_type %> </td>                  
        <td><%= row.status %> </td>                  
        <td>
            <a href="/admin/action?id=<%= row._id %>"> <i class="text-success fas fa-edit fa-lg mx-1"></i></a>
        </td>
    </tr>                            
<% }) %>               
</tbody>
</table>
<% } else { %>
<h1 class="text-center text-secondary mt-5">No Users Found in the Database !</h1>
<% } %>
</div>
</div>
</div>
</div>
 
